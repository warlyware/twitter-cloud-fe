html
  body
    .col.s12.text-center
      form(ng-submit='search()')
        .row.center
          .col.s4.offset-s4
            .input-field
              input#hash_search(type='text', ng-model='words')
              label(for='hash_search') Search Hashtags
        .row.center
          .input-group-btn
            button.waves-effect.waves-light.btn(type='submit') Search
      .row
        .card-panel(ng-show='hashesSearched')
          #tags.clearfix
            .tag(ng-repeat='(tag, size) in tags track by $index', style='font-size: {{size}}px; color: {{randColor[$index]}}', ng-model='tagBox')
              span(ng-click='includeInTweet(tag)') {{tag}}
      br
      br
      .row.center
        textarea.z-depth-2(ng-model='tweet', rows='10')
        br
        button.waves-effect.waves-light.btn.tweet-button(ng-click='sendTweet()') tweet
